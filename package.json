  "bugs": {
    "url": "https://github.com/Aomitayo/openapi-editor/issues"
  },
  "homepage": "https://github.com/Aomitayo/openapi-editor#readme",
  "dependencies": {
    "commander": "^2.9.0",
    "express": "^4.15.3",
    "path": "^0.12.7",
